generator client {
  provider = "prisma-client-js"
  output   = "../../src/generated/control"
}

datasource db {
  provider = "postgresql"
  url      = env("CONTROL_DATABASE_URL")
}

enum TenantRole {
  ADMIN
  ANALYST
  VIEWER
}

/// Control-plane tenant registry.
model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  slug      String   @unique
  name      String

  dbCredential TenantDbCredential?
  memberships  Membership[]
  invitations  Invitation[]

  @@map("tenants")
}

/// Encrypted DSN for per-tenant Postgres DB.
model TenantDbCredential {
  id           String   @id @default(uuid()) @db.Uuid
  tenantId     String   @unique @db.Uuid @map("tenant_id")
  createdAt    DateTime @default(now()) @map("created_at")
  encryptedDsn String   @map("encrypted_dsn")
  dbName       String   @map("db_name")
  dbUser       String   @map("db_user")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("tenant_db_credentials")
}

/// NextAuth user.
model User {
  id            String    @id @default(uuid()) @db.Uuid
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?

  accounts     Account[]
  sessions     Session[]
  memberships  Membership[]

  @@map("auth_users")
}

/// NextAuth account (OIDC provider accounts).
model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @db.Uuid @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refreshToken      String? @map("refresh_token")
  accessToken       String? @map("access_token")
  expiresAt         Int?    @map("expires_at")
  tokenType         String? @map("token_type")
  scope             String?
  idToken           String? @map("id_token")
  sessionState      String? @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("auth_accounts")
}

/// NextAuth session.
model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @db.Uuid @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("auth_sessions")
}

/// NextAuth verification token (not used for Entra, but kept for completeness).
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("auth_verification_tokens")
}

/// Membership is scoped per tenant.
model Membership {
  id        String     @id @default(uuid()) @db.Uuid
  tenantId  String     @db.Uuid @map("tenant_id")
  userId    String     @db.Uuid @map("user_id")
  role      TenantRole @default(ANALYST)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([userId])
  @@index([tenantId])
  @@map("memberships")
}

/// Invitation workflow for tenant admins.
model Invitation {
  id        String     @id @default(uuid()) @db.Uuid
  tenantId  String     @db.Uuid @map("tenant_id")
  email     String
  role      TenantRole @default(ANALYST)
  token     String     @unique
  expiresAt DateTime   @map("expires_at")
  acceptedAt DateTime? @map("accepted_at")
  createdAt DateTime   @default(now()) @map("created_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@map("invitations")
}


