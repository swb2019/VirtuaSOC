generator client {
  provider = "prisma-client-js"
  output   = "../../src/generated/control"
}

datasource db {
  provider = "postgresql"
  url      = env("CONTROL_DATABASE_URL")
}

enum TenantRole {
  ADMIN
  ANALYST
  VIEWER
}

/// Control-plane tenant registry.
model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dbCredential TenantDbCredential?
  memberships  Membership[]
  invitations  Invitation[]
}

/// Encrypted DSN for per-tenant Postgres DB.
model TenantDbCredential {
  id           String   @id @default(uuid()) @db.Uuid
  tenantId     String   @unique @db.Uuid
  encryptedDsn String
  dbName       String
  dbUser       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
}

/// NextAuth user.
model User {
  id            String    @id @default(uuid()) @db.Uuid
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts     Account[]
  sessions     Session[]
  memberships  Membership[]
}

/// NextAuth account (OIDC provider accounts).
model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @db.Uuid
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

/// NextAuth session.
model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique
  userId       String   @db.Uuid
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// NextAuth verification token (not used for Entra, but kept for completeness).
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/// Membership is scoped per tenant.
model Membership {
  id        String     @id @default(uuid()) @db.Uuid
  tenantId  String     @db.Uuid
  userId    String     @db.Uuid
  role      TenantRole @default(ANALYST)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([userId])
  @@index([tenantId])
}

/// Invitation workflow for tenant admins.
model Invitation {
  id        String     @id @default(uuid()) @db.Uuid
  tenantId  String     @db.Uuid
  email     String
  role      TenantRole @default(ANALYST)
  token     String     @unique
  expiresAt DateTime
  acceptedAt DateTime?
  createdAt DateTime   @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}


